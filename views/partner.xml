<odoo>
    <record model="ir.ui.view" id="view_partner_parche_inherit_form">
        <field name="name">res.partner.parche.inherit.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_cl_fe.view_partner_activity_inherit_form"/>
        <field name="arch" type="xml">
            <!--xpath expr="//field[@name='city_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//field[@name='street']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//field[@name='document_number']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//field[@name='zip']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='document_type_id']" position="attributes">
                <attribute name="string">Tipo de documento</attribute>
            </xpath>
            <xpath expr="//field[@name='document_number']" position="attributes">
                <attribute name="string">Número de documento</attribute>
            </xpath>
            <xpath expr="//field[@name='responsability_id']" position="attributes">
                <attribute name="string">Responsabilidad</attribute>
            </xpath-->
            <xpath expr="//field[@name='l10n_cl_activity_description']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='acteco_ids']" position="after">
                <group>                
                    <field name="is_customer" />             
                    <field name="is_provider" />   
                </group>               
            </xpath> 
            <!--xpath expr="//div[@class='oe_title mb24']" position="after">
                <div style="border-top: 1px solid #000; margin: 10px 0;"></div>     
            </xpath!--> 
            <xpath expr="//field[@name='website']" position="attributes">
                <attribute name="placeholder">e.j. https://www.insumar.cl</attribute>  
            </xpath>      


        </field>
    </record>
    <record id="view_partner_latan_form_inherit_hide_fields" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.hide.latin.am.fields</field>
        <field name="model">res.partner</field>        
        <field name="inherit_id" ref="l10n_latam_base.view_partner_latam_form"/>        
        <field name="arch" type="xml">
            <!-- 1. Ocultamos la etiqueta "Número de Identificación" -->
            <xpath expr="//label[@for='l10n_latam_identification_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- 2. Ocultamos el contenedor <div> que tiene los dos campos -->
            <xpath expr="//div[field[@name='l10n_latam_identification_type_id']]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_partner_form_inherit_hide_fields" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.hide.fields</field>
        <field name="model">res.partner</field>        
        <field name="inherit_id" ref="base.view_partner_form"/>        
        <field name="arch" type="xml">  
            <!-- Ocultamos el campo del número de identificación (VAT) -->
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>            
        </field>
    </record>

