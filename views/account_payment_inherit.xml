<odoo>
    <record id="view_account_payment_form_inherit_cheque" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.cheque</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_method_line_id']" position="after">               
                    <field name="serie_cheque" attrs="{'invisible': [('payment_method_line_id', 'not in', [1, 2, 4, 22, 29, 32, 34, 39, 45])]}"/>
                    <field name="banco_cheque_id" attrs="{'invisible': [('payment_method_line_id', 'not in', [1, 2, 4, 22, 29, 32, 34, 39, 45])]}"/>
                    <field name="fecha_cobro" attrs="{'invisible': [('payment_method_line_id', 'not in', [1, 2, 4, 22, 29, 32, 34, 39, 45])]}"/>
            </xpath>

        </field>
    </record>
    
    <record id="view_account_payment_register_form_inherit_cheque" model="ir.ui.view">
        <field name="name">account.payment.register.form.inherit.cheque</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_method_line_id']" position="after">
                
                    <field name="serie_cheque" attrs="{'invisible': [('payment_method_line_id', 'not in', [1, 2, 4, 22, 29, 32, 34, 39, 45])]}"/>
                    <field name="banco_cheque_id" attrs="{'invisible': [('payment_method_line_id', 'not in', [1, 2, 4, 22, 29, 32, 34, 39, 45])]}"/>
                    <field name="fecha_cobro" attrs="{'invisible': [('payment_method_line_id', 'not in', [1, 2, 4, 22, 29, 32, 34, 39, 45])]}"/>
          
            </xpath>

        </field>
    </record>
 <record id="view_estado_cheques_tree" model="ir.ui.view">
        <field name="name">estado.cheques.tree</field>
        <field name="model">account.payment</field>
        <field name="arch" type="xml">
            <tree string="Estado de Cheques" default_order="date asc" editable="bottom" create="false" delete="false">                
                <field name="factura_name" string="Factura" readonly="1"/>
                <field name="partner_id" string="Cliente" readonly="1"/>
                <field name="partner_vat" string="RUT" readonly="1"/>
                <field name="date" string="Fecha de Pago" readonly="1"/>                              
                <field name="amount" string="Monto" widget="monetary" readonly="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="serie_cheque" string="NÂ° Documento" readonly="1"/>
                <field name="fecha_cobro" string="Fecha Documento"/>
                <field name="banco_cheque_id" string="Banco" readonly="1"/>
                <field name="sucursal_nombre" string="Sucursal" readonly="1"/>
                <field name="estado_cheque" string="Estado" widget="badge" decoration-success="estado_cheque == 'cobrado'" decoration-danger="estado_cheque == 'no_cobrado'" readonly="1"/>
                
                <button name="action_toggle_estado_cheque"
                        type="object"
                        string="Marcar como Cobrado"
                        class="oe_highlight"
                        attrs="{'invisible': [('estado_cheque', '=', 'cobrado')]}"/>
            </tree>
        </field>
    </record>


 <record id="action_estado_cheques" model="ir.actions.act_window">
    <field name="name">Estado de Cheques</field>
    <field name="res_model">account.payment</field>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="view_estado_cheques_tree"/>
    <field name="domain">[('payment_method_line_id','in',[1,2,4,22,29,32,34,39,45]),
        ('partner_type','=','customer')]</field>
</record>

    <menuitem id="menu_estado_cheques"
              name="Estado de Cheques"
              parent="account.menu_finance_reports"
              action="action_estado_cheques"
              sequence="90"/>
</odoo>